{
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true,
    "esm": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "docker"]
}
